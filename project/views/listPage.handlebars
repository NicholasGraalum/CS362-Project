<main>
  <div class="ingredients-bar">
    <h2>Ingredients</h2>
  </div>
  
  <div class="ingredients-grid" id="all-ingredients-grid">
    {{#each list}}
      <div class="ingredient-item" style="display: flex; align-items: center;">
        <button onclick="window.location.href='/list/delete?ingredient={{this.i_name}}'" style="margin-right: 10px;">X</button>
        {{!-- <button class="remove-ingredient" data-ingredient="{{this.i_name}}" style="margin-right: 10px;">X</button> --}}
        <span class="ingredient-amount" style="margin-right: 10px;">{{this.amount}} G</span>
        <span class="ingredient-name">{{this.i_name}}</span>
      </div>
    {{/each}}
  </div>
  
  <div class="price-box" style="margin-top: 20px; padding: 10px; border-top: 1px solid #ccc;">
    <h3>Total Price: ${{totalPrice}}</h3>
  </div>
</main>