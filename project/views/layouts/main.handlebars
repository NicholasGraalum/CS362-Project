<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Smart Cart</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <div class="site-title">
        <a href="/">Smart Cart v1.0</a>
      </div>
      <div class="topbar">
        {{!-- Profile button with people icon --}}
        {{#unless isLoginPage}}
          <button id="profile-viewer" class="action-button">
            <svg class="profile-icon" width="64" height="64" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
              {{!-- Left Person --}}
              <circle cx="16" cy="20" r="8" fill="#007bff"/>
              <rect x="10" y="28" width="12" height="20" fill="#007bff" rx="3"/>

              {{!-- Center Person (Slightly Bigger) --}}
              <circle cx="32" cy="16" r="10" fill="#007bff"/>
              <rect x="25" y="26" width="15" height="24" fill="#007bff" rx="3"/>

              {{!-- Right Person --}}
              <circle cx="48" cy="20" r="8" fill="#007bff"/>
              <rect x="42" y="28" width="12" height="20" fill="#007bff" rx="3"/>
            </svg>
          </button>
        {{/unless}}
        {{!-- Back button (Only on Login Page) --}}
        {{#if isLoginPage}}
          <button id="back-button" class="back-button" onclick="window.history.back();">‚Üê</button>
          {{!-- Hamburger menu --}}
          <div id="hamburger-menu" class="hamburger-menu">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
          </div>
        {{/if}}
      </div>
    </header>

    {{!-- Mobile nav (Only if not on Login Page) --}}
    {{#if isLoginPage}}
      <nav id="mobile-nav" class="mobile-nav">
        <ul>
          <li><button id="meals-viewer" class="action-button">Meals</button></li>
          <li><button id="ingredients-viewer" class="action-button">Ingredients</button></li>
          <li><button id="list-viewer" class="action-button">List</button></li>
        </ul>
      </nav>
    {{/if}}

    <main>
      {{{body}}}
    </main>

    <script src="/index.js"></script>
  </body>
</html>
